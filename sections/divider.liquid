{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sp }}px;
    padding-bottom: {{ section.settings.padding_bottom_sp }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-divider--{{ section.id }} {
    opacity: 1;
    color: {{ section.settings.border_color }};
  }

  .active-divider {
    opacity: 1;
  }



.divider--{{ section.id }} {
height: {{ section.settings.border_height }}px; 
border: {{ section.settings.border_line }}px {{ section.settings.border_style }} {{ section.settings.border_color }};
border-radius: {{ section.settings.border_radius }}px;
}

  @media only screen and (max-width: 749px) {
  .sp--hide {
    display: none !important; }
}
  @media only screen and (min-width: 750px) {
  .pc--hide {
    display: none !important; }
}
{%- endstyle -%}

{% assign border-width = 100 | minus: section.settings.div_width | divided_by: 2 %}
{% assign divider_border = section.settings.divider_border %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding {{ section.settings.divider-option }}">
   <div width="{{ section.settings.div_width }}" class="section-divider--{{ section.id }} {% if divider_border %}active-divider divider--{{ section.id }}{% endif %}" style=" margin-left:{{ border-width }}% !important; margin-right:{{ border-width }}% !important;">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ディバイダー",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "PCの余白"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "header",
      "content": "SPの余白"
    },
    {
      "type": "range",
      "id": "padding_top_sp",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_sp",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    },
    {
      "type": "header",
      "content": "ディバイダー"
    },
    {
      "type": "checkbox",
      "id": "divider_border",
      "label": "ディバイダー表示",
      "default": true
    },
    {
      "type": "radio",
      "id": "divider_option",
      "options": [
        {
          "value": "pc--hide",
          "label": "SP"
        },
        {
          "value": "sp--hide",
          "label": "PC"
        },
        {
          "value": "showboth",
          "label": "両方"
        }
      ],
      "label": "ディバイダー",
      "default": "showboth"
    },
    {
        "type": "color",
        "id": "border_color",
        "label": "カラー",
        "default": "#aaaaaa"
    },
    {
        "type": "range",
        "id": "div_width",
        "min": 5,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "幅",
        "default": 80
    },
    {
        "type": "range",
        "id": "border_height",
        "label": "高さ1",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 2
    },
    {
        "type": "range",
        "id": "border_line",
        "label": "高さ2",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 1
    },
    {
        "type": "select",
        "id": "border_style",
        "label": "スタイル" ,
        "default": "solid",
        "options": [
            {
                "value": "mix",
                "label": "none"
            },
            {
                "value": "solid",
                "label": "Solid"
            },
            {
                "value": "dotted",
                "label": "Dotted"
            },
            {
                "value": "groove",
                "label": "Groove"
            },
            {
                "value": "ridge",
                "label": "Ridge"
            },
            {
                "value": "inset",
                "label": "Inset"
            },
            {
                "value": "outset",
                "label": "Outset"
            },
            {
                "value": "dashed",
                "label": "Dashed"
            }
        ]
    },
    {
        "type": "range",
        "id": "border_radius",
        "label": "半径",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 2
    }
  ],
  "presets": [
    {
      "name": "ディバイダー"
    }
  ]
}
{% endschema %}
